{
    "manifest_version": 2,
    "name": "Page Notes",
    "version": "1.1",

    "description": "Allows the user to put save notes. Also exists the possibility of deleting them if the user does not need them anymore",
    "icons": {
    "48": "icons/message.png"
    },

    "permissions": [
    "storage",
    "tabs"
    ],

    "background": {
        "scripts": [
            "background-scripts/background-script.js"
        ]
    },

    "browser_action": {
        "default_icon": {
            "32" : "icons/message.png"
        },
        "default_title": "Page notes",
        "default_popup": "popup/notes.html"
    }
}
